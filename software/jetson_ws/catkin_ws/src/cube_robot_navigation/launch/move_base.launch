<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>
  <arg name="param_folder" default="$(find cube_robot_navigation)/param"/>
  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(arg param_folder)/costmap_common_params_cube_robot.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(arg param_folder)/costmap_common_params_cube_robot.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(arg param_folder)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(arg param_folder)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(arg param_folder)/move_base_params.yaml" command="load" />
    <rosparam file="$(arg param_folder)/dwa_local_planner_params_cube_robot.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
